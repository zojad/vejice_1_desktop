<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:type="TaskPaneApp">

  <Id>145e403b-f34f-4971-8882-b366e89cfb6b</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>CJVT</ProviderName>
  <DefaultLocale>sl-SI</DefaultLocale>
  <DisplayName DefaultValue="Preverjanje vejic"/>
  <Description DefaultValue="Preverite ustrezno rabo vejic v Word dokumentu."/>

  <!-- TOP-LEVEL: icons + support -->
  <IconUrl DefaultValue="https://zojad.github.io/vejice_1/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://zojad.github.io/vejice_1/assets/icon-80.png"/>
  <SupportUrl DefaultValue="https://zojad.github.io/vejice_1/"/>

  <!-- IMPORTANT: AppDomains BEFORE Hosts -->
  <AppDomains>
    <AppDomain>https://localhost:4001</AppDomain>
    <AppDomain>https://zojad.github.io</AppDomain>
    <AppDomain>https://zojad.github.io/vejice_1</AppDomain>
    <AppDomain>https://gpu-proc1.cjvt.si</AppDomain>
  </AppDomains>

  <!-- Host declaration -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <!-- DefaultSettings BEFORE Permissions (schema requirement) -->
  <DefaultSettings>
    <!-- Commands-only: point to commands.html to satisfy schema -->
    <SourceLocation DefaultValue="https://zojad.github.io/vejice_1/commands.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <!-- Ribbon (commands) live in VersionOverrides -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>

          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="VejiceGroup">
                <Label resid="VejiceGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="GroupIcon.16x16"/>
                  <bt:Image size="32" resid="GroupIcon.32x32"/>
                  <bt:Image size="80" resid="GroupIcon.80x80"/>
                </Icon>

                <Control xsi:type="Button" id="CheckVejice">
                  <Label resid="CheckVejice.Label"/>
                  <Supertip>
                    <Title resid="CheckVejice.Label"/>
                    <Description resid="CheckVejice.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="GroupIcon.16x16"/>
                    <bt:Image size="32" resid="GroupIcon.32x32"/>
                    <bt:Image size="80" resid="GroupIcon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>checkDocumentText</FunctionName>
                  </Action>
                </Control>

                <Control xsi:type="Button" id="AcceptAll">
                  <Label resid="AcceptAll.Label"/>
                  <Supertip>
                    <Title resid="AcceptAll.Label"/>
                    <Description resid="AcceptAll.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="GroupIcon.16x16"/>
                    <bt:Image size="32" resid="GroupIcon.32x32"/>
                    <bt:Image size="80" resid="GroupIcon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>acceptAllChanges</FunctionName>
                  </Action>
                </Control>

                <Control xsi:type="Button" id="RejectAll">
                  <Label resid="RejectAll.Label"/>
                  <Supertip>
                    <Title resid="RejectAll.Label"/>
                    <Description resid="RejectAll.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="GroupIcon.16x16"/>
                    <bt:Image size="32" resid="GroupIcon.32x32"/>
                    <bt:Image size="80" resid="GroupIcon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>rejectAllChanges</FunctionName>
                  </Action>
                </Control>

                <!-- Temporary debug button to open taskpane for DevTools -->
                <Control xsi:type="Button" id="DebugTaskpane">
                  <Label resid="DebugTaskpane.Label"/>
                  <Supertip>
                    <Title resid="DebugTaskpane.Label"/>
                    <Description resid="DebugTaskpane.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="GroupIcon.16x16"/>
                    <bt:Image size="32" resid="GroupIcon.32x32"/>
                    <bt:Image size="80" resid="GroupIcon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>Taskpane.Debug</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="GroupIcon.16x16"  DefaultValue="https://zojad.github.io/vejice_1/assets/icon-16.png"/>
        <bt:Image id="GroupIcon.32x32"  DefaultValue="https://zojad.github.io/vejice_1/assets/icon-32.png"/>
        <bt:Image id="GroupIcon.80x80"  DefaultValue="https://zojad.github.io/vejice_1/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://zojad.github.io/vejice_1/commands.html"/>
        <bt:Url id="Taskpane.Url"  DefaultValue="https://zojad.github.io/vejice_1/commands.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="VejiceGroup.Label"   DefaultValue="Vejice"/>
        <bt:String id="CheckVejice.Label"   DefaultValue="Preveri vejice"/>
        <bt:String id="AcceptAll.Label"     DefaultValue="Sprejmi spremembe"/>
        <bt:String id="RejectAll.Label"     DefaultValue="Zavrni spremembe"/>
        <bt:String id="DebugTaskpane.Label" DefaultValue="Debug"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="CheckVejice.Tooltip" DefaultValue="Preverite rabo vejic v dokumentu."/>
        <bt:String id="AcceptAll.Tooltip"   DefaultValue="Sprejmi vse predlagane spremembe."/>
        <bt:String id="RejectAll.Tooltip"   DefaultValue="Zavrni vse predlagane spremembe."/>
        <bt:String id="DebugTaskpane.Tooltip" DefaultValue="Odpri taskpane za DevTools."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
